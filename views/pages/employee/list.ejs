<%- include('../../fragments/header.ejs') %>

        <main>
           <table class="table-list">
            <thead>
                <tr>
                    <th><%= __('emp.fields.firstName') %></th>
                    <th><%= __('emp.fields.lastName') %></th>
                    <th><%= __('emp.fields.phone_number') %></th>
                    <th><%= __('emp.fields.address') %></th>
                    <th><%= __('emp.fields.actions') %></th>
                </tr>
            </thead>
            <tbody>
                <% for (let emp of emps) { %>
                    <tr>
                    <td><%= emp.firstName %></td>
                    <td><%= emp.lastName %></td>
                    <td><%= emp.phone_number %></td>
                    <td><%= emp.address %></td>

                    <td class="list-actions"><ul>
                        <li><a href="/employee/details/<%= emp._id %>" class="list-actions-button-details"><%= __('list.actions.details') %></a></li>
                        <% if(loggedUser) { %>

                        <li><a href="/employee/delete/<%= emp._id %>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a></li>
                        <li><a href="/employee/edit/<%= emp._id %>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a></li>
                        <% } %>

                    </ul></td>
                    </tr>
                <% } %>
            </tbody>
            
           </table>
           <% if(loggedUser) { %>

           <p><a href="/employee/add" class="button-add"><%= __('emp.form.add.btnLabel') %></a></p>
           <% } %>

        </main>
        <%- include('../../fragments/footer.ejs') %>